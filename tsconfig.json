{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "esModuleInterop": true,
    "module": "es2015",
    "target": "es2017",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "build",
    "declarationDir": "dist",
    "pretty": true,
    "removeComments": false,
  },
  "files": [
    "src/index.ts"
  ]
}